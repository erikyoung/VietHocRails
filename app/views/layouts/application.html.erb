<!DOCTYPE html>
<html>

<head>
    <title>Viethoc</title>
    <%= csrf_meta_tags %>
        <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/css?family=Inconsolata|Open+Sans" rel="stylesheet">
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
            <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div id="flex-content-container">
    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <%= link_to 'VietHoc', root_path, class:'navbar-brand' %> 

      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          
          <li class="nav-item">
            <a class="nav-link" href="#">About</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="#">Blog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Content</a>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'nav-link' %> 
          </li>
          <% else %> 
          
          <li class="nav-item">
            <%= link_to 'Login', new_user_session_path,  class: 'nav-link' %>
          </li>
          <li class="nav-item">
          <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
          </li>

          <% end %> 

          
        </ul>
        <form class="form-inline my-2 my-lg-0">
        <div class="search">
       	 <i class="fa fa-search" aria-hidden="true"></i>
          <input class="form-control mr-sm-2" type="text" placeholder="Search">

        </div>
        </form>
      </div>
    </nav>

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

    <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="contact-info col-12 col-sm-4">
            <b>Contact</b>
            <br />
            youngerik26@gmail.com
            <br />
            3628 Shaffer Rd
            <br />
            Rock Creek, Ohio, 44084
          </div><!-- div class col-12 -->
          <div class="col-12 col-sm-4 social">
            <b>Social</b>
            <br />
            
              <%= link_to 'https://github.com/erikyoung' do %>
              <span class="fa fa-github-square fa-2x social-button"></span>
              <% end %>
              <%= link_to 'https://www.facebook.com/erik.young.923' do %>
              <span class="fa fa-facebook-square fa-2x social-button"></span>
              <% end %>
              <%= link_to 'https://twitter.com/youngerik26' do %>
              <span class="fa fa-twitter-square fa-2x social-button"></span>
              <% end %> 
              <%= link_to 'https://medium.com/@erikyoung_58444' do %> 
              <span class="fa fa-medium fa-2x social-button"></span>

          </div><!-- col-12 -->
          <div class="col-12 col-sm-4 teacher-admin">
          <b>Teachers</b>
              <br />
              <%= link_to 'Teacher Admin Login', new_instructor_course_path, {:style=>'color:#f7a395', :class => "css_class"}%>
              <% end %> 
          </div>
        </div><!-- row -->
      </div> <!-- div container -->
   </div><!-- footer -->
</body>

</html>